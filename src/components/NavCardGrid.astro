---
import NavCard from "./NavCard.astro";
---

<div class="navCardGrid">
    <div class="navCardGridItem"><NavCard title="One" subtitle="A valid subtitle" imgNum="image2" link="Archives"/></div>
    <div class="navCardGridItem2"><NavCard title="One" subtitle="A valid subtitle" imgNum="image2" link="Archives"/></div>
    <div class="navCardGridItem3"><NavCard title="One" subtitle="A valid subtitle" imgNum="image2" link="Archives"/></div>
    <div class="navCardGridItem3"><NavCard title="One" subtitle="A valid subtitle" imgNum="image2" link="Archives"/></div>
    <div class="navCardGridItem3"><NavCard title="One" subtitle="A valid subtitle" imgNum="image2" link="Archives"/></div>
    <div class="navCardGridItem3"><NavCard title="One" subtitle="A valid subtitle" imgNum="image2" link="Archives"/></div>
</div>

<style>
:root {
    --columnCount: 5;
}

    .navCardGrid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(13rem, 1fr));
        grid-gap: 2rem;
    }

    @media (max-width: 1190px) {
  :root {
    --columnCount: 4;
  }}

      @media (max-width: 980px) {
  :root {
    --columnCount: 3;
  }}

        @media (max-width: 750px) {
  :root {
    --columnCount: 2;
  }}

          @media (max-width: 500px) {
  :root {
    --columnCount: 1;
  }}

</style>