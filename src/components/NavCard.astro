---
const { title, subtitle, imgNum, link } = Astro.props;
---

<div class="navCardContainer">
  <div class="navCard">
    <div id={imgNum} class="navCardImage"></div>
    <div class="overlay"></div>
    <div class="navCardTitle">{title}</div>
    <a href={link}></a>
  </div>
  <p class="navCardSubtitle">{subtitle}</p>
</div>

<style>
  .navCard > a {
    width: 100%;
    height: 100%;
    position: absolute;
  }
  .navCardContainer {
    width: var(--NavCardSize);
    aspect-ratio: 1/1.65;
  }

  .navCard {
    width: 100%;
    height: 85%;
    clip-path: inset(0% round 8% 8% 8% 8%);
    display: grid;
  }
  .navCard > * {
    grid-column: 1;
    grid-row: 1;
    align-self: center;
  }

  .navCard > .overlay {
    height: 100%;
    width: 100%;
    background-image: linear-gradient(to bottom, #0000 10%, #001 90%);
    transition: background-image 0.25s;
  }

  .navCardImage {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    z-index: -1;
    transition: transform 0.5s;
    transform-origin: center center;
  }

  .navCardTitle {
    width: 100%;
    text-align: center;
    padding-left: 0.5rem;
    padding-right: 0.5rem;
    font-family: Modern Sans, Arial, sans-serif;
    color: white;
    font-size: 130%;
    font-weight: bold;
    letter-spacing: 0.1rem;
    transform-origin: center center;
    transform: translateY(500%);
    transition: transform 0.5s;
  }

  .navCardSubtitle {
    width: 100%;
    text-align: center;
    padding-top: 0.4rem;
    padding-left: 0.5rem;
    padding-right: 0.5rem;
    font-family: Modern Sans, Arial, sans-serif;
    color: hsl(0 0% 70%);
    font-size: 100%;
    font-weight: bold;
    overflow: clip;
    transition: color 0.75s, font-size 0.75s;
  }

  /*Hover Transforms*/

  .navCard:hover {
    cursor: pointer;
  }

  .navCard:hover > .navCardImage {
    transform: scale(1.05);
  }

  .navCard:hover > .navCardTitle {
    transform: translateY(480%);
  }

  .navCard:hover > .navCardOverlay {
    background-image: linear-gradient(to bottom, #0000 10%, #001 87%);
  }

  #image2 {
    background-image: url("https://cards.scryfall.io/art_crop/front/b/8/b8d58c2d-2bff-4d25-a023-0a6342167f5f.jpg?1674142441");
  }
</style>
