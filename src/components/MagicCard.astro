---
const { cardIMGURL } = Astro.props;
---

<div class="MagicCardContainer">
  <img src={cardIMGURL} class="MagicCardImage" />
  <a href="/"></a>
</div>

<style>
  .MagicCardContainer {
    display: grid;
    width: 100%;
    aspect-ratio: 2.5/3.5;
    padding: 1%;
  }

  .MagicCardContainer > * {
    grid-column: 1;
    grid-row: 1;
    align-self: center;
  }
  .MagicCardImage {
    width: 100%;
    height: 100%;
    clip-path: inset(0% round 4% 4% 4% 4%);
  }

  a {
    width: 100%;
    height: 100%;
    cursor: pointer;
  }
</style>
