---
import BibBaseLayout from "../layouts/BibBaseLayout.astro";
const pageTitle = "404";
---

  <BibBaseLayout pageTitle={pageTitle}>
  <header>
  <div>
    <h1>Oops...</h1>
    <h1>Something is wrong here!</h1>
    </div>
  </header>
  </BibBaseLayout>

  <style>
    header {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: calc(100vh - (var(--FooterHeight) * 2));
  }
  div {margin-block: auto;}

  h1 {
    font-family: Modern Sans, arial, sans-serif;
    font-size: 7vw;
    font-weight: 800;
    margin-block: auto;
    background-image: linear-gradient(to top, white, 40%, var(--BibBlue));
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    width: 80vw;
    text-align: center;
  }
  </style>