---
import NavCardGrid from "../components/NavCardGrid.astro";
import BibBaseLayout from "../layouts/BibBaseLayout.astro";
const pageTitle = "Start Searching";
import { startSearchingList } from "../scripts/navCardLists";
const NavCardList = startSearchingList;
---

<BibBaseLayout pageTitle={pageTitle}>
  <header>
    <h1>START SEARCHING</h1>
    <div class="searchBarContainer">
      <div class="searchBarStyle"></div>
      <input type="text" placeholder="Begin here..." />
    </div>
    
  </header>
  <NavCardGrid NavCardList={NavCardList} />
</BibBaseLayout>

<style>
  header {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  h1 {
    font-family: Modern Sans, arial, sans-serif;
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 800;
    margin-block: var(--LargeGap);
    background-image: linear-gradient(to top, white, 40%, var(--BibBlue));
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    width: 80vw;
    text-align: center;
  }

  .searchBarContainer {
    height: 3rem;
    width: 75vw;
    max-width: 35rem;
    display: grid;

  }

  .searchBarContainer > * {
    grid-column: 1/-1;
    grid-row: 1/-1;
    align-self: center;
    height: 100%;
    width: 100%;
  }

  .searchBarContainer > input {
    outline: none;
    border: none;
    background-color: transparent;
    padding-block: 0.25rem;
    padding-inline: 1rem;
    font-family: Modern Sans, Arial, Helvetica, sans-serif;
    font-size: 1rem;
    color: hsl(0, 0%, 80%);
  }

  .searchBarContainer:hover > .searchBarStyle {
    border: 0.18rem solid hsl(200, 50%, 40%);
    border-radius: 10px;
  }

  .searchBarStyle {
    border: 0.18rem solid hsl(200, 50%, 50%);
    border-radius: 15px;
    transition: border 0.25s, border-radius 0.25s;
  }
</style>
